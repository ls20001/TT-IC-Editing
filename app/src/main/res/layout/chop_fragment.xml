<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChopFragment">

  <com.example.tticediting.ChopView
      android:id="@+id/chopView"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/main"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="5dp"
            app:icon="@drawable/ic_confirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/discard"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="5dp"
            app:icon="@drawable/ic_discard"
            app:layout_constraintStart_toEndOf="@id/confirm"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/discard">

          <RadioGroup
              android:id="@+id/chopMode"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:checkedButton="@id/chopModeFree"
              android:gravity="center"
              android:orientation="horizontal">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/chopModeFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="@string/free"
                android:textStyle="bold" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/chopMode1to1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="1:1"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/chopMode4to3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="4:3"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/chopMode3to4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="3:4"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/chopMode16to9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="16:9"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/chopMode9to16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="9:16"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
          </RadioGroup>
        </HorizontalScrollView>
      </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
  </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>